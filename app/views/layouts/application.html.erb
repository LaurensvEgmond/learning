<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>	
	<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<div class="navbar-header">
					<a href="#" class="navbar-brand">Treebook</a>
				</div>
				<ul class="nav navbar-nav">
					<li><%= link_to "All statuses", statuses_path %></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<% if user_signed_in? %>
						<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
						<li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "Register", new_user_registration_path %></li>
						<li><%= link_to "Login", new_user_session_path %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %>">
			<div class="container"><%= message %></div>
		</div>
	
	<% end %>

<!-- 
	<% if flash[:notice] %>
		<div class="alert alert-success">
			<div class="container"><%= notice %></div>
		</div>
	<% end %>
	<% if flash[:alert] %>
    	<div class="alert alert-danger">
    		<div class="container"><%= alert %></div>
    	</div>
	<% end %> -->
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
